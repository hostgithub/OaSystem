<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/id_title" layout="@layout/layout_job_title" />
    <LinearLayout
        android:layout_width="match_parent" android:layout_marginTop="10dp"
        android:layout_height="0dp" android:layout_weight="2"
        android:background="@color/title_text_color" android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="1" android:orientation="horizontal">
            <RelativeLayout android:id="@+id/rl1"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="3dp" android:src="@color/badp_bg"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content" android:text="会议通知"
                    android:textSize="15sp" android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content" android:textColor="@color/black_text_color"/>
                <TextView
                    android:layout_width="wrap_content" android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" android:layout_centerVertical="true"
                    android:text="4" android:textSize="15sp" android:id="@+id/bumber1"
                    android:layout_marginRight="10dp" android:textColor="@color/title_color"/>
                <View
                    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
                    android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl2"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="3dp" android:src="@color/red_text"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content" android:text="行政待批"
                    android:textSize="15sp" android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content" android:textColor="@color/black_text_color"/>
                <TextView
                    android:layout_width="wrap_content" android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" android:layout_centerVertical="true"
                    android:text="4" android:textSize="15sp" android:id="@+id/bumber2"
                    android:layout_marginRight="10dp" android:textColor="@color/red_text"/>
                <View
                    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
                    android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="0dp" android:layout_weight="1">
            <RelativeLayout android:id="@+id/rl3"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="3dp" android:src="@color/swdp_bg"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content" android:text="收文待批"
                    android:textSize="15sp" android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content" android:textColor="@color/black_text_color"/>
                <TextView
                    android:layout_width="wrap_content" android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" android:layout_centerVertical="true"
                    android:text="4" android:textSize="15sp" android:id="@+id/bumber3"
                    android:layout_marginRight="10dp" android:textColor="@color/swdp_bg"/>
                <View
                    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
                    android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl4"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="3dp" android:src="@color/index_green"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content" android:text="发文待批"
                    android:textSize="15sp" android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content" android:textColor="@color/black_text_color"/>
                <TextView
                    android:layout_width="wrap_content" android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" android:layout_centerVertical="true"
                    android:text="4" android:textSize="15sp" android:id="@+id/bumber4"
                    android:layout_marginRight="10dp" android:textColor="@color/index_green"/>
                <View
                    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
                    android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_height="0dp" android:layout_weight="1">
            <RelativeLayout android:id="@+id/rl5"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="3dp" android:src="@color/zwsq_bg"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content" android:text="政务申请"
                    android:textSize="15sp" android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content" android:textColor="@color/black_text_color"/>
                <TextView
                    android:layout_width="wrap_content" android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" android:layout_centerVertical="true"
                    android:text="4" android:textSize="15sp" android:id="@+id/bumber5"
                    android:layout_marginRight="10dp" android:textColor="@color/zwsq_bg"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl6"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="3dp" android:src="@color/pink_bg"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content" android:text="办案待批"
                    android:textSize="15sp" android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content" android:textColor="@color/black_text_color"/>
                <TextView
                    android:layout_width="wrap_content" android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" android:layout_centerVertical="true"
                    android:text="4" android:textSize="15sp" android:id="@+id/bumber6"
                    android:layout_marginRight="10dp" android:textColor="@color/pink_bg"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_marginTop="10dp"
        android:layout_height="0dp" android:layout_weight="4"
        android:background="@color/title_text_color" android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content" android:orientation="horizontal"
            android:layout_height="0dp" android:layout_weight="1">
            <RelativeLayout android:id="@+id/table1"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent" android:text="会议通知"
                    android:gravity="center" android:drawableTop="@mipmap/icon_b1"
                   android:drawablePadding="15dp" android:textColor="@color/black_text_color"
                    android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                <View
                    android:layout_width="1dp" android:background="@color/WhiteSmoke"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
                <View
                    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
                    android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/table2"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent" android:text="待批工作"
                    android:gravity="center" android:drawableTop="@mipmap/icon_b2"
                    android:drawablePadding="15dp" android:textColor="@color/black_text_color"
                    android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                <View
                    android:layout_width="1dp" android:background="@color/WhiteSmoke"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
                <View
                    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
                    android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/table3"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent" android:text="已批工作"
                    android:gravity="center" android:drawableTop="@mipmap/icon_b13"
                    android:drawablePadding="15dp" android:textColor="@color/black_text_color"
                    android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                <View
                    android:layout_width="1dp" android:background="@color/WhiteSmoke"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
                <View
                    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
                    android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:layout_weight="1">
            <RelativeLayout android:id="@+id/table4"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent" android:text="收文办理"
                    android:gravity="center" android:drawableTop="@mipmap/icon_b4"
                    android:drawablePadding="15dp" android:textColor="@color/black_text_color"
                    android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                <View
                    android:layout_width="1dp" android:background="@color/WhiteSmoke"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
                <View
                    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
                    android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/table5"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent" android:text="发文办理"
                    android:gravity="center" android:drawableTop="@mipmap/icon_b3"
                    android:drawablePadding="15dp" android:textColor="@color/black_text_color"
                    android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                <View
                    android:layout_width="1dp" android:background="@color/WhiteSmoke"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
                <View
                    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
                    android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/table6"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent" android:text="政务申请"
                    android:gravity="center" android:drawableTop="@mipmap/icon_b16"
                    android:drawablePadding="15dp" android:textColor="@color/black_text_color"
                    android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                <View
                    android:layout_width="1dp" android:background="@color/WhiteSmoke"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
                <View
                    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
                    android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:layout_weight="1">
            <RelativeLayout android:id="@+id/table7"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent" android:text="办案待批"
                    android:gravity="center" android:drawableTop="@mipmap/icon_b08"
                    android:drawablePadding="15dp" android:textColor="@color/black_text_color"
                    android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                <View
                    android:layout_width="1dp" android:background="@color/WhiteSmoke"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
                <View
                    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
                    android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/table8"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent" android:text="办案已批"
                    android:gravity="center" android:drawableTop="@mipmap/icon_b17"
                    android:drawablePadding="15dp" android:textColor="@color/black_text_color"
                    android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                <View
                    android:layout_width="1dp" android:background="@color/WhiteSmoke"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
                <View
                    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
                    android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/table9"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent" android:text="内网网站"
                    android:gravity="center" android:drawableTop="@mipmap/icon_b18"
                    android:drawablePadding="15dp" android:textColor="@color/black_text_color"
                    android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                <View
                    android:layout_width="1dp" android:background="@color/WhiteSmoke"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
                <View
                    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
                    android:layout_height="1dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>