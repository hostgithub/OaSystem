<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.gdtc.oasystem.ui.ZhengwuApplyActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white_snow" >

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="政务申请"
            android:textStyle="bold"
            android:textColor="@color/black_text_color"
            android:textSize="19.5sp" />

        <ImageView
            android:id="@+id/title_back_img"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:clickable="true"
            android:padding="10dp" />

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:textColor="@color/black_text_color"
            android:textSize="18sp"
            android:visibility="gone" />

    </FrameLayout>

    <RelativeLayout android:id="@+id/rl1"
        android:background="@color/title_text_color" android:padding="5.0dip"
        android:layout_width="match_parent" android:layout_height="80dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content" android:background="@mipmap/icon_h01"
            android:id="@+id/iv_danwei" android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <TextView android:textSize="20.0sp" android:textColor="@color/title_color"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="省法院机关请假单" android:layout_toRightOf="@+id/iv_danwei"
            android:layout_marginLeft="20dp" android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <RelativeLayout android:id="@+id/rl2" android:background="@color/title_text_color"
        android:padding="5.0dip" android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="wrap_content" android:background="@mipmap/icon_h02"
            android:id="@+id/iv_dept" android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <TextView android:textSize="20.0sp" android:textColor="@color/title_color"
            android:layout_width="240dp" android:layout_height="wrap_content"
            android:text="省直机关事业单位干部职工带薪休假申请表" android:layout_toRightOf="@+id/iv_dept"
            android:layout_marginLeft="20dp" android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <RelativeLayout android:id="@+id/rl3" android:background="@color/title_text_color"
        android:padding="5.0dip" android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="wrap_content" android:background="@mipmap/icon_h3"
            android:id="@+id/iv_position" android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <TextView android:textSize="20.0sp" android:textColor="@color/title_color"
            android:layout_width="260dp" android:layout_height="wrap_content"
            android:text="省法院领导及部门主要负责人外出请假报告单"  android:layout_toRightOf="@+id/iv_position"
            android:layout_marginLeft="20dp" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
