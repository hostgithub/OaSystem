<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:background="@color/WhiteSmoke"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.gdtc.oasystem.ui.ZhengwuApplyActivity">

    <include android:id="@+id/id_title" layout="@layout/layout_setting_title" />

    <RelativeLayout android:id="@+id/rl1"
        android:background="@color/title_text_color" android:padding="5.0dip"
        android:layout_width="match_parent" android:layout_height="80dp">
        <ImageView
            android:layout_width="wrap_content" android:background="@drawable/home"
            android:id="@+id/iv_danwei" android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <TextView android:textSize="25.0sp" android:textColor="@color/title_color"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/danwei" android:layout_toRightOf="@+id/iv_danwei"
            android:layout_marginLeft="20dp" android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <RelativeLayout android:id="@+id/rl2" android:background="@color/title_text_color"
        android:padding="5.0dip" android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="wrap_content" android:background="@drawable/home"
            android:id="@+id/iv_dept" android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <TextView android:textSize="25.0sp" android:textColor="@color/title_color"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/dept" android:layout_toRightOf="@+id/iv_dept"
            android:layout_marginLeft="20dp" android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <RelativeLayout android:id="@+id/rl3" android:background="@color/title_text_color"
        android:padding="5.0dip" android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="wrap_content" android:background="@drawable/home"
            android:id="@+id/iv_position" android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <TextView android:textSize="25.0sp" android:textColor="@color/title_color"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/position"  android:layout_toRightOf="@+id/iv_position"
            android:layout_marginLeft="20dp" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
