<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/rl">
        <ImageView
            android:layout_width="50dp" android:id="@+id/image"
            android:layout_height="50dp" android:src="@mipmap/icon_d1"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#000" android:ellipsize="end"
            android:textSize="17sp"
            tools:text="标题"
            android:layout_marginStart="13dp"
            android:layout_alignTop="@+id/image"
            android:layout_toEndOf="@+id/image" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="17sp"
            tools:text="2017-9-15"
            android:layout_alignBottom="@+id/image"
            android:layout_alignStart="@+id/tv_title" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent" android:background="@drawable/realline"
        android:layout_height="1dp" android:layout_below="@+id/rl"
        android:layout_marginTop="10dp"/>
</RelativeLayout>