<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/id_title" layout="@layout/layout_job_title" />
    <RelativeLayout
        android:layout_width="match_parent" android:layout_marginTop="10dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@color/title_text_color" android:orientation="vertical">

        <GridView
            android:id="@+id/mGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="90dp"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20.0px"
            android:horizontalSpacing="10.0px"/>

    </RelativeLayout>
</LinearLayout>