<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/rl">
        <ImageView
            android:layout_width="50dp" android:id="@+id/image"
            android:layout_height="50dp" android:src="@mipmap/icon_d2"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#666666" android:ellipsize="end"
            android:textSize="12sp"
            tools:text="username"
            android:layout_marginStart="13dp"
            android:layout_alignTop="@+id/image"
            android:layout_toEndOf="@+id/image" />

        <LinearLayout
            android:background="@color/title_text_color"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/index_blue" android:ellipsize="end"
            android:textSize="17sp"
            tools:text="leixing"
            android:layout_below="@+id/tv_name"
            android:layout_toEndOf="@+id/image" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp"
                tools:text="内容内容内容内容内容内容内容容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
                android:maxLines="3"
                android:ellipsize="end" android:layout_marginTop="5dp"
               />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textColor="#666666"
                android:textSize="14sp"
                tools:text="9:00" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>