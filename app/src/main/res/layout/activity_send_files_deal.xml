<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include android:id="@+id/id_title" layout="@layout/layout_setting_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"  android:layout_weight="1"
            android:layout_height="match_parent" android:background="#000">

            <View android:id="@+id/line_white_top"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/colorToolWhite"
                android:layout_marginTop="40dp"/>
            <Button android:id="@+id/btn_wait_deal"
                android:text="待办" android:textColor="@color/title_text_color"
                android:layout_width="match_parent" android:layout_below="@+id/line_white_top"
                android:layout_height="40dp" android:background="@drawable/btnshapewhitestroke"/>
            <View android:id="@+id/line_white"
                android:layout_width="match_parent" android:layout_below="@+id/btn_wait_deal"
                android:layout_height="1dp" android:background="@color/colorToolWhite"/>
            <Button android:id="@+id/btn_has_deal"
                android:text="已办" android:textColor="@color/title_text_color"
                android:layout_width="match_parent" android:layout_below="@+id/line_white"
                android:layout_height="40dp" android:background="@drawable/btnshapewhitestroke"/>
            <View
                android:layout_width="match_parent" android:layout_below="@+id/btn_has_deal"
                android:layout_height="1dp" android:background="@color/colorToolWhite"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="0dp"  android:layout_weight="4"
            android:layout_height="match_parent" android:id="@+id/content">
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
