<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include android:id="@+id/id_title" layout="@layout/layout_setting_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical"
            android:background="#fff" android:padding="5dp">
            <TextView android:id="@+id/tv_title" android:text="佳木斯市政府机关请假单"
                android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"  android:textSize="20sp"
                android:layout_marginTop="10dp" android:textColor="#000"/>
            <View android:background="@color/title_color"
                android:layout_width="match_parent"
                android:layout_height="2dp" android:layout_marginTop="10dp"/>
            <TextView android:text="所在部门:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:textSize="18sp"
                android:layout_marginTop="15dp" android:textColor="#000"/>
            <Spinner android:id="@+id/spinner_bumen" android:visibility="gone"
                android:layout_width="match_parent" android:background="@drawable/spinner"
                android:layout_height="40dp" android:layout_marginTop="10dp"/>
            <TextView android:id="@+id/tv_bumen" android:singleLine="true"
                android:layout_width="match_parent" android:background="@drawable/editshape"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"/>

            <TextView android:text="姓名:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:textSize="18sp"
                android:layout_marginTop="15dp" android:textColor="#000"/>
            <TextView android:id="@+id/tv_username"
                 android:singleLine="true"
                android:layout_width="match_parent" android:background="@drawable/editshape"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"/>

            <TextView android:text="工作年限:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:textSize="18sp"
                android:layout_marginTop="15dp" android:textColor="#000"/>
            <EditText android:id="@+id/edt_work_years"
                android:imeOptions="actionNext" android:singleLine="true"
                android:nextFocusForward="@+id/edt_content"
                android:layout_width="match_parent" android:background="@drawable/editshape"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"/>

            <TextView android:text="请假类型:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:textSize="18sp"
                android:layout_marginTop="15dp" android:textColor="#000"/>
            <Spinner android:id="@+id/spinner_kind"
                android:layout_width="match_parent" android:background="@drawable/spinner"
                android:layout_height="40dp" android:layout_marginTop="10dp"/>
            <TextView android:text="请假起止时间:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:textSize="18sp"
                android:layout_marginTop="15dp" android:textColor="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:text="开始时间"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/editshape" />

                <TextView
                    android:id="@+id/stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="结束时间"
                    android:background="@drawable/editshape" />
            </LinearLayout>

            <TextView android:text="内容:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:textSize="18sp"
                android:layout_marginTop="15dp" android:textColor="#000"/>

            <EditText
                android:id="@+id/edt_content"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editshape"
                android:gravity="left|top"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/edt_name" />

            <TextView android:text="部门领导意见:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:textSize="18sp"
                android:layout_marginTop="15dp" android:textColor="#000"/>

            <EditText
                android:id="@+id/edt_bumen_leader_advice"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editshape"
                android:gravity="left|top"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/edt_name" />

            <TextView android:text="分管院领导意见:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:textSize="18sp"
                android:layout_marginTop="15dp" android:textColor="#000"/>

            <EditText
                android:id="@+id/edt_part_leader_advice"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editshape"
                android:gravity="left|top"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/edt_name" />


            <TextView android:text="常务副院长意见:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:textSize="18sp"
                android:layout_marginTop="15dp" android:textColor="#000"/>

            <EditText
                android:id="@+id/edt_cwfyz_advice"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editshape"
                android:gravity="left|top"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/edt_name" />


            <TextView android:text="干部处意见:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:textSize="18sp"
                android:layout_marginTop="15dp" android:textColor="#000"/>

            <EditText
                android:id="@+id/edt_gbc_advice"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editshape"
                android:gravity="left|top"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/edt_name" />


            <TextView android:text="选择发送人:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:textSize="18sp"
                android:layout_marginTop="15dp" android:textColor="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_send_person"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" android:text="选择发送人"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/editshape" />

                <ImageView
                    android:id="@+id/iv_upload"
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/upload"/>
            </LinearLayout>

            <Button android:id="@+id/btn_submit" android:layout_marginTop="15dp"
                android:text="提  交" android:textColor="#ffff"
                android:layout_width="120dp" android:layout_gravity="center_horizontal"
                android:layout_height="40dp" android:background="@drawable/btnshape"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

