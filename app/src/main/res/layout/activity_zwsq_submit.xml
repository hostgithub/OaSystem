<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include android:id="@+id/id_title" layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent" android:background="@color/title_text_color"
            android:layout_height="match_parent" android:orientation="vertical"
            android:padding="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical"
            android:background="@color/title_text_color" android:padding="10dp">
            <TextView android:id="@+id/tv_title" android:text="省法院机关请假单"
                android:layout_width="wrap_content" android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"  android:textSize="25sp"
                android:layout_marginTop="10dp" android:textColor="@color/red_text"/>
            <View android:background="@color/WhiteSmoke"
                android:layout_width="match_parent"
                android:layout_height="2dp" android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="50dp" android:gravity="center_vertical">

                <TextView android:text="所在部门"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  android:textSize="18sp"
                    android:textColor="#000" android:layout_marginLeft="5dp"/>
                <Spinner android:id="@+id/spinner_bumen" android:visibility="gone"
                    android:layout_width="match_parent" android:background="@drawable/spinner"
                    android:layout_height="40dp" android:layout_marginTop="10dp"/>
                <TextView android:id="@+id/tv_bumen"
                    android:layout_width="wrap_content" android:textColor="@color/huise_text_color"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"
                    android:text="高法部" android:layout_marginRight="15dp"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <View android:background="@color/WhiteSmoke"
                android:layout_width="match_parent"
                android:layout_height="2dp" android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="50dp" android:gravity="center_vertical">

                <TextView android:text="姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  android:textSize="18sp"
                    android:textColor="#000" android:layout_marginLeft="5dp"/>
                <TextView android:id="@+id/tv_username"
                    android:layout_width="wrap_content" android:textColor="@color/huise_text_color"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"
                    android:text="xxx" android:layout_marginRight="15dp"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <View android:background="@color/WhiteSmoke"
                android:layout_width="match_parent"
                android:layout_height="2dp" android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="50dp" android:gravity="center_vertical">

                <TextView android:text="工作年限"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  android:textSize="18sp"
                    android:textColor="#000" android:layout_marginLeft="5dp"/>
                <Spinner android:id="@+id/edt_work_years"
                    android:layout_width="wrap_content" android:textColor="@color/huise_text_color"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"
                    android:text="xxx" android:layout_marginRight="15dp"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <View android:background="@color/WhiteSmoke"
                android:layout_width="match_parent"
                android:layout_height="2dp" android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="50dp" android:gravity="center_vertical">

                <TextView android:text="请假类型"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  android:textSize="18sp"
                    android:textColor="#000" android:layout_marginLeft="5dp"/>
                <TextView android:id="@+id/tv_kind"
                    android:layout_width="wrap_content" android:textColor="@color/huise_text_color"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"
                    android:hint="请选择类别>"
                    android:textSize="18sp" android:textColorHint="@color/huise_text_color" android:layout_marginRight="15dp" />
            </RelativeLayout>
            <View android:background="@color/WhiteSmoke"
                android:layout_width="match_parent"
                android:layout_height="2dp" android:layout_marginTop="10dp"/>


            <RelativeLayout
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="50dp" android:gravity="center_vertical">

                <TextView android:text="开始日期"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  android:textSize="18sp"
                    android:textColor="#000" android:layout_marginLeft="5dp"/>
                <TextView android:id="@+id/start"
                    android:layout_width="wrap_content" android:textColor="@color/huise_text_color"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp" android:hint="选择开始日期>"
                    android:textSize="18sp" android:textColorHint="@color/huise_text_color"/>
            </RelativeLayout>
            <View android:background="@color/WhiteSmoke"
                android:layout_width="match_parent"
                android:layout_height="2dp" android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="50dp" android:gravity="center_vertical">

                <TextView android:text="结束日期"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  android:textSize="18sp"
                    android:textColor="#000" android:layout_marginLeft="5dp"/>
                <TextView android:id="@+id/stop"
                    android:layout_width="wrap_content" android:textColor="@color/huise_text_color"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp" android:hint="选择结束日期>"
                    android:textSize="18sp" android:textColorHint="@color/huise_text_color"/>
            </RelativeLayout>
            <View android:background="@color/WhiteSmoke"
                android:layout_width="match_parent"
                android:layout_height="2dp" android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="50dp" android:gravity="center_vertical">

                <TextView android:text="天数"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  android:textSize="18sp"
                    android:textColor="#000" android:layout_marginLeft="5dp"/>
                <TextView android:id="@+id/day_number"
                    android:layout_width="wrap_content" android:textColor="@color/huise_text_color"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp" android:textSize="18sp"
                    android:text="天"/>
            </RelativeLayout>
            <View android:background="@color/WhiteSmoke"
                android:layout_width="match_parent"
                android:layout_height="2dp" android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"
                android:orientation="horizontal" android:gravity="center_vertical">

                <TextView android:text="请假事由"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  android:textSize="18sp"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/edt_content"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/editshape"
                    android:gravity="left|top" android:hint="请简要说明"
                    android:imeOptions="actionDone" />
            </LinearLayout>

            <View android:background="@color/WhiteSmoke"
                android:layout_width="match_parent"
                android:layout_height="2dp" android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent" android:layout_marginTop="10dp"
                android:layout_height="50dp" android:gravity="center_vertical">

                <TextView android:text="选择发送人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  android:textSize="18sp"
                    android:textColor="#000" android:layout_marginLeft="5dp"/>
                <TextView android:id="@+id/tv_send_person"
                    android:layout_width="wrap_content" android:textColor="@color/huise_text_color"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:hint="选择发送人>"
                    android:textSize="18sp" android:textColorHint="@color/huise_text_color"/>
            </RelativeLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Button android:id="@+id/btn_submit" android:layout_marginTop="5dp"
                    android:text="提  交" android:textColor="#ffff"
                    android:layout_weight="1"
                    android:layout_width="0dp" android:layout_gravity="center_horizontal"
                    android:layout_height="40dp" android:background="@drawable/btnshape"/>
                <Button android:id="@+id/btn_cancel" android:layout_marginTop="5dp"
                    android:text="取  消" android:textColor="#ffff"
                    android:layout_weight="1"
                    android:layout_width="0dp" android:layout_gravity="center_horizontal"
                    android:layout_height="40dp" android:background="@drawable/btnshape_cancle"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

